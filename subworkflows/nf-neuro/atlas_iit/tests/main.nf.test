nextflow_workflow {

    name "Test Subworkflow ATLAS_IIT"
    script "../main.nf"
    workflow "ATLAS_IIT"

    config "../nextflow.config"

    tag "subworkflows"
    tag "subworkflows_nfneuro"
    tag "subworkflows/atlas_iit"

    tag "image/math"

    tag "subworkflows/utils_options"

    tag "load_test_data"

    test("atlas_iit - download and process") {
        when {
            workflow {
                """
                input[0] = [:]
                """
            }
        }
        then{
            assertAll(
                { assert workflow.success},
                { assert snapshot(
                    workflow.out.b0,
                    workflow.out.bundle_masks,
                    workflow.out.versions).match() }
            )
        }
    }
}
