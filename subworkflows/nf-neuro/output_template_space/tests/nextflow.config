process {
    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }
    cpus = 1

    withName: "REGISTRATION_ANTS" {
        ext.repro_mode = 1
        ext.transform = "s"
        ext.quick = true
        ext.run_qc = true
    }
    withName: "WARPIMAGES" {
        ext.interpolation = "Linear"
        ext.dimensionality = 3
        ext.image_type = 0
        ext.output_dtype = "float"
        ext.default_val = 0
        ext.run_qc = true
    }
    withName: "WARPMASK" {
        ext.interpolation = "NearestNeighbor"
        ext.dimensionality = 3
        ext.image_type = 1
        ext.output_dtype = "int"
        ext.default_val = 0
        ext.run_qc = true
    }
    withName: "WARPLABELS" {
        ext.interpolation = "NearestNeighbor"
        ext.dimensionality = 3
        ext.image_type = 1
        ext.output_dtype = "int"
        ext.default_val = 0
        ext.run_qc = true
    }
    withName: "REGISTRATION_TRACTOGRAM" {
        ext.inverse = true
        ext.force = true
        ext.remove_single_point = true
        ext.remove_overlapping_points = true
        ext.threshold = 0.001
        ext.no_empty = true
    }
    withName: "REGISTRATION_SYNTHMORPH" {
        ext.models = ["affine"]
        ext.extent = 192
        memory = "2G"
    }
    withName: "UTILS_TEMPLATEFLOW" {
        ext.stub_no_brain_mask = true
    }
    withName: "BET_T1W" {
        ext.bet_f = 0.6
        ext.crop = false
        ext.dilate = false
    }
    withName: "BET_T2W" {
        ext.bet_f = 0.6
        ext.crop = false
        ext.dilate = false
    }    
}

params.templateflow_home = "./"
params.template = "MNI152NLin2009aAsym"
params.templateflow_res = 1
params.templateflow_cohort = null
params.use_template_t2w = false
